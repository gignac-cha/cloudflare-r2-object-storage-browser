<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Merge all application resource dictionaries -->
    <ResourceDictionary.MergedDictionaries>

        <!-- Color & Brush Definitions -->
        <ResourceDictionary Source="ms-appx:///Resources/Styles/ColorBrushes.xaml"/>

        <!-- Icon Definitions -->
        <ResourceDictionary Source="ms-appx:///Resources/Icons/SegoeIcons.xaml"/>

        <!-- Control Styles -->
        <ResourceDictionary Source="ms-appx:///Resources/Styles/ButtonStyles.xaml"/>
        <ResourceDictionary Source="ms-appx:///Resources/Styles/ListStyles.xaml"/>

    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>
