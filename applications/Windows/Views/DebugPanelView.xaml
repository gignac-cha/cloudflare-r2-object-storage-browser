<UserControl
    x:Class="CloudflareR2Browser.Views.DebugPanelView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:CloudflareR2Browser.Models"
    xmlns:viewmodels="using:CloudflareR2Browser.ViewModels"
    mc:Ignorable="d"
    d:DesignHeight="350"
    d:DesignWidth="800">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/> <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="Debug Panel"
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               VerticalAlignment="Center"
                               AutomationProperties.HeadingLevel="Level2"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                    <!-- Search Box -->
                    <AutoSuggestBox PlaceholderText="Search..."
                                    Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    QueryIcon="Find"
                                    Width="200"
                                    VerticalAlignment="Center"
                                    AutomationProperties.Name="Search logs"/>

                    <Button ToolTipService.ToolTip="Copy selected"
                            AutomationProperties.Name="Copy selected log entry"
                            Style="{StaticResource SubtleButtonStyle}"
                            Width="36"
                            Height="36">
                        <FontIcon Glyph="&#xE8C8;" FontSize="16"/>
                    </Button>

                    <Button Command="{x:Bind ViewModel.ExportLogsCommand, Mode=OneWay}"
                            ToolTipService.ToolTip="Export logs"
                            AutomationProperties.Name="Export all logs to file"
                            Style="{StaticResource SubtleButtonStyle}"
                            Width="36"
                            Height="36">
                        <FontIcon Glyph="&#xE74E;" FontSize="16"/>
                    </Button>

                    <Button Command="{x:Bind ViewModel.CloseCommand, Mode=OneWay}"
                            ToolTipService.ToolTip="Close"
                            AutomationProperties.Name="Close debug panel"
                            Style="{StaticResource SubtleButtonStyle}"
                            Width="36"
                            Height="36">
                        <FontIcon Glyph="&#xE711;" FontSize="16"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tabs -->
        <TabView Grid.Row="1"
                 SelectedIndex="{x:Bind SelectedTabIndex, Mode=TwoWay}"
                 TabWidthMode="SizeToContent"
                 IsAddTabButtonVisible="False"
                 CanDragTabs="False"
                 CanReorderTabs="False">

            <!-- API Response Tab -->
            <TabView.TabItems>
                <TabViewItem Header="API Response"
                             AutomationProperties.Name="API response logs">
                    <TabViewItem.IconSource>
                        <FontIconSource Glyph="&#xE968;"/>
                    </TabViewItem.IconSource>

                    <Grid>
                        <!-- Empty State -->
                        <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Spacing="12"
                                    Visibility="{x:Bind ViewModel.ApiResponses.Count, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                            <FontIcon Glyph="&#xE964;"
                                      FontSize="48"
                                      Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                            <TextBlock Text="No API calls yet"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <!-- API Response List -->
                        <ListView ItemsSource="{x:Bind ViewModel.FilteredApiResponses, Mode=OneWay}"
                                  SelectionMode="Single"
                                  AutomationProperties.Name="API response list">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="16,12"/>
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:ApiDebugResponse">
                                    <Grid RowSpacing="8">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header Row -->
                                        <Grid Grid.Row="0" ColumnSpacing="12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Method Badge -->
                                            <Border Grid.Column="0"
                                                    Background="{x:Bind Method, Converter={StaticResource StatusToColorConverter}}"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    VerticalAlignment="Center">
                                                <TextBlock Text="{x:Bind Method}"
                                                           FontFamily="Consolas"
                                                           FontSize="11"
                                                           FontWeight="SemiBold"
                                                           Foreground="White"/>
                                            </Border>

                                            <!-- Endpoint -->
                                            <TextBlock Grid.Column="1"
                                                       Text="{x:Bind Endpoint}"
                                                       FontFamily="Consolas"
                                                       FontSize="13"
                                                       VerticalAlignment="Center"
                                                       TextTrimming="CharacterEllipsis"/>

                                            <!-- Duration -->
                                            <TextBlock Grid.Column="2"
                                                       FontSize="12"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       VerticalAlignment="Center">
                                                <Run Text="{x:Bind DurationMs}"/>
                                                <Run Text="ms"/>
                                            </TextBlock>

                                            <!-- Timestamp -->
                                            <TextBlock Grid.Column="3"
                                                       Text="{x:Bind Timestamp, Converter={StaticResource DateToRelativeConverter}}"
                                                       FontSize="11"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       VerticalAlignment="Center"/>
                                        </Grid>

                                        <!-- Status Code -->
                                        <StackPanel Grid.Row="1"
                                                    Orientation="Horizontal"
                                                    Spacing="8">
                                            <TextBlock Text="Status:"
                                                       FontSize="12"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            <TextBlock Text="{x:Bind StatusCode}"
                                                       FontFamily="Consolas"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>

                                        <!-- Response Body -->
                                        <Border Grid.Row="2"
                                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                                BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                CornerRadius="6"
                                                Padding="12"
                                                MaxHeight="200">
                                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                          HorizontalScrollBarVisibility="Auto">
                                                <TextBlock Text="{x:Bind ResponseBody}"
                                                           FontFamily="Consolas"
                                                           FontSize="11"
                                                           TextWrapping="Wrap"
                                                           IsTextSelectionEnabled="True"/>
                                            </ScrollViewer>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </TabViewItem>

                <!-- Server Logs Tab -->
                <TabViewItem Header="Server Logs"
                             AutomationProperties.Name="Server logs">
                    <TabViewItem.IconSource>
                        <FontIconSource Glyph="&#xE7C3;"/>
                    </TabViewItem.IconSource>

                    <Grid>
                        <!-- Empty State -->
                        <StackPanel VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Spacing="12"
                                    Visibility="{x:Bind ViewModel.ServerLogs.Count, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                            <FontIcon Glyph="&#xE7C3;"
                                      FontSize="48"
                                      Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                            <TextBlock Text="No server logs yet"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <!-- Server Log List -->
                        <ListView ItemsSource="{x:Bind ViewModel.FilteredServerLogs, Mode=OneWay}"
                                  SelectionMode="Single"
                                  AutomationProperties.Name="Server log list"
                                  Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="16,8"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </ListView.ItemContainerStyle>

                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="x:String">
                                    <Grid ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Line Number -->
                                        <TextBlock Grid.Column="0"
                                                   FontFamily="Consolas"
                                                   FontSize="11"
                                                   Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                                   VerticalAlignment="Top"
                                                   Margin="0,2,0,0"/>

                                        <!-- Log Content -->
                                        <TextBlock Grid.Column="1"
                                                   Text="{x:Bind}"
                                                   FontFamily="Consolas"
                                                   FontSize="12"
                                                   TextWrapping="NoWrap"
                                                   IsTextSelectionEnabled="True"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </TabViewItem>
            </TabView.TabItems>
        </TabView>
    </Grid>
</UserControl>
