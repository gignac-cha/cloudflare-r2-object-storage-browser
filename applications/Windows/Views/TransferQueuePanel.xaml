<UserControl
    x:Class="CloudflareR2Browser.Views.TransferQueuePanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:CloudflareR2Browser.Models"
    xmlns:viewmodels="using:CloudflareR2Browser.ViewModels"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="800">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/> <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="Transfers"
                               Style="{StaticResource SubtitleTextBlockStyle}"
                               VerticalAlignment="Center"
                               AutomationProperties.HeadingLevel="Level2"/>

                    <!-- Active count badge -->
                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}"
                            CornerRadius="10"
                            Padding="8,4"
                            VerticalAlignment="Center"
                            Visibility="{x:Bind ViewModel.IsTransferring, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="{x:Bind ViewModel.ActiveTasks.Count, Mode=OneWay}"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"/>
                    </Border>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                    <Button Content="Clear Completed"
                            Command="{x:Bind ViewModel.ClearCompletedCommand, Mode=OneWay}"
                            IsEnabled="{x:Bind ViewModel.CompletedTasks.Count, Mode=OneWay}"
                            Style="{StaticResource SubtleButtonStyle}"
                            FontSize="12"
                            Height="32"/>
                    <Button Content="Clear Failed"
                            Command="{x:Bind ViewModel.ClearFailedCommand, Mode=OneWay}"
                            IsEnabled="{x:Bind ViewModel.FailedTasks.Count, Mode=OneWay}"
                            Style="{StaticResource SubtleButtonStyle}"
                            FontSize="12"
                            Height="32"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Tabs -->
        <TabView Grid.Row="1"
                 TabWidthMode="SizeToContent"
                 IsAddTabButtonVisible="False"
                 CanDragTabs="False"
                 CanReorderTabs="False">

            <!-- Active Transfers Tab -->
            <TabView.TabItems>
                <TabViewItem Header="Active"
                             AutomationProperties.Name="Active transfers">
                    <TabViewItem.IconSource>
                        <FontIconSource Glyph="&#xE768;"/>
                    </TabViewItem.IconSource>

                    <ListView ItemsSource="{x:Bind ViewModel.ActiveTasks, Mode=OneWay}"
                              SelectionMode="None"
                              AutomationProperties.Name="Active transfers list">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="16,12"/>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:TransferTask">
                                <Grid RowSpacing="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header Row -->
                                    <Grid Grid.Row="0" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Type Icon -->
                                        <FontIcon Grid.Column="0"
                                                  Glyph="{x:Bind Type, Converter={StaticResource FileIconConverter}}"
                                                  FontSize="20"
                                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>

                                        <!-- File Info -->
                                        <StackPanel Grid.Column="1" Spacing="2">
                                            <TextBlock Text="{x:Bind FileName}"
                                                       FontFamily="Consolas"
                                                       FontSize="14"
                                                       FontWeight="SemiBold"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{x:Bind RemotePath}"
                                                       FontFamily="Consolas"
                                                       FontSize="11"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <!-- Status Badge -->
                                        <Border Grid.Column="2"
                                                Background="{x:Bind Status, Converter={StaticResource StatusToColorConverter}}"
                                                CornerRadius="12"
                                                Padding="12,6"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{x:Bind Status}"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"/>
                                        </Border>
                                    </Grid>

                                    <!-- Progress Bar -->
                                    <ProgressBar Grid.Row="1"
                                                 Value="{x:Bind ProgressPercentage, Mode=OneWay}"
                                                 Maximum="100"
                                                 IsIndeterminate="{x:Bind IsActive, Mode=OneWay}"
                                                 Height="4"
                                                 CornerRadius="2"/>

                                    <!-- Details Row -->
                                    <Grid Grid.Row="2" ColumnSpacing="16">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{x:Bind HumanReadableSpeed, Mode=OneWay}"
                                                   FontSize="12"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                                        <TextBlock Grid.Column="1"
                                                   Text="{x:Bind HumanReadableTimeRemaining, Mode=OneWay}"
                                                   FontSize="12"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                                        <!-- Action Buttons -->
                                        <StackPanel Grid.Column="3"
                                                    Orientation="Horizontal"
                                                    Spacing="4">
                                            <Button Command="{x:Bind ViewModel.PauseTransferCommand, Mode=OneWay}"
                                                    CommandParameter="{x:Bind Id}"
                                                    IsEnabled="{x:Bind CanPause, Mode=OneWay}"
                                                    ToolTipService.ToolTip="Pause"
                                                    Style="{StaticResource SubtleButtonStyle}"
                                                    Width="32"
                                                    Height="32">
                                                <FontIcon Glyph="&#xE769;" FontSize="12"/>
                                            </Button>
                                            <Button Command="{x:Bind ViewModel.ResumeTransferCommand, Mode=OneWay}"
                                                    CommandParameter="{x:Bind Id}"
                                                    IsEnabled="{x:Bind CanResume, Mode=OneWay}"
                                                    ToolTipService.ToolTip="Resume"
                                                    Style="{StaticResource SubtleButtonStyle}"
                                                    Width="32"
                                                    Height="32">
                                                <FontIcon Glyph="&#xE768;" FontSize="12"/>
                                            </Button>
                                            <Button Command="{x:Bind ViewModel.CancelTransferCommand, Mode=OneWay}"
                                                    CommandParameter="{x:Bind Id}"
                                                    IsEnabled="{x:Bind CanCancel, Mode=OneWay}"
                                                    ToolTipService.ToolTip="Cancel"
                                                    Style="{StaticResource SubtleButtonStyle}"
                                                    Width="32"
                                                    Height="32">
                                                <FontIcon Glyph="&#xE711;" FontSize="12"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </TabViewItem>

                <!-- Completed Transfers Tab -->
                <TabViewItem Header="Completed"
                             AutomationProperties.Name="Completed transfers">
                    <TabViewItem.IconSource>
                        <FontIconSource Glyph="&#xE73E;"/>
                    </TabViewItem.IconSource>

                    <ListView ItemsSource="{x:Bind ViewModel.CompletedTasks, Mode=OneWay}"
                              SelectionMode="None"
                              AutomationProperties.Name="Completed transfers list">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="16,12"/>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:TransferTask">
                                <Grid ColumnSpacing="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <FontIcon Grid.Column="0"
                                              Glyph="&#xE73E;"
                                              FontSize="20"
                                              Foreground="{ThemeResource SystemFillColorSuccessBrush}"/>

                                    <StackPanel Grid.Column="1" Spacing="2">
                                        <TextBlock Text="{x:Bind FileName}"
                                                   FontFamily="Consolas"
                                                   FontSize="14"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{x:Bind HumanReadableDuration, Mode=OneWay}"
                                                   FontSize="11"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2"
                                               Text="{x:Bind CompletedAt, Mode=OneWay, Converter={StaticResource DateToRelativeConverter}}"
                                               FontSize="12"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </TabViewItem>

                <!-- Failed Transfers Tab -->
                <TabViewItem Header="Failed"
                             AutomationProperties.Name="Failed transfers">
                    <TabViewItem.IconSource>
                        <FontIconSource Glyph="&#xE783;"/>
                    </TabViewItem.IconSource>

                    <ListView ItemsSource="{x:Bind ViewModel.FailedTasks, Mode=OneWay}"
                              SelectionMode="None"
                              AutomationProperties.Name="Failed transfers list">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="16,12"/>
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:TransferTask">
                                <Grid RowSpacing="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" ColumnSpacing="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <FontIcon Grid.Column="0"
                                                  Glyph="&#xE783;"
                                                  FontSize="20"
                                                  Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>

                                        <StackPanel Grid.Column="1" Spacing="2">
                                            <TextBlock Text="{x:Bind FileName}"
                                                       FontFamily="Consolas"
                                                       FontSize="14"
                                                       TextTrimming="CharacterEllipsis"/>
                                            <TextBlock Text="{x:Bind Error, Mode=OneWay}"
                                                       FontSize="11"
                                                       Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>

                                        <Button Grid.Column="2"
                                                Command="{x:Bind ViewModel.RetryTransferCommand, Mode=OneWay}"
                                                CommandParameter="{x:Bind Id}"
                                                Content="Retry"
                                                VerticalAlignment="Center"/>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </TabViewItem>
            </TabView.TabItems>
        </TabView>
    </Grid>
</UserControl>
