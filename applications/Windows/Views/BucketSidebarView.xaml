<UserControl
    x:Class="CloudflareR2Browser.Views.BucketSidebarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:CloudflareR2Browser.Models"
    xmlns:viewmodels="using:CloudflareR2Browser.ViewModels"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="250">

    <Grid Background="{ThemeResource LayerFillColorDefaultBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/> <!-- Bucket List -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <TextBlock Text="Buckets"
                           Style="{StaticResource SubtitleTextBlockStyle}"
                           VerticalAlignment="Center"
                           AutomationProperties.HeadingLevel="Level2"/>

                <Button HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Command="{x:Bind ViewModel.RefreshCommand, Mode=OneWay}"
                        ToolTipService.ToolTip="Refresh bucket list"
                        AutomationProperties.Name="Refresh buckets"
                        Style="{StaticResource SubtleButtonStyle}">
                    <FontIcon Glyph="&#xE72C;" FontSize="16"/>
                </Button>
            </Grid>
        </Border>

        <!-- Bucket List Content -->
        <Grid Grid.Row="1">
            <!-- Loading State -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Spacing="16"
                        Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                <ProgressRing IsActive="True" Width="40" Height="40"/>
                <TextBlock Text="Loading buckets..."
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <!-- Empty State -->
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Spacing="12"
                        Padding="24"
                        Visibility="{x:Bind ViewModel.Buckets.Count, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                <FontIcon Glyph="&#xE838;"
                          FontSize="48"
                          Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                <TextBlock Text="No buckets yet"
                           Style="{StaticResource BodyStrongTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Create a bucket in the Cloudflare dashboard to get started."
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                           FontSize="12"/>
            </StackPanel>

            <!-- Error State -->
            <Border Margin="16"
                    Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                    BorderBrush="{ThemeResource SystemFillColorCriticalBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Visibility="{x:Bind ViewModel.Error, Mode=OneWay, Converter={StaticResource NullToVisibilityConverter}}">
                <StackPanel Spacing="8">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE783;"
                                  FontSize="16"
                                  Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                        <TextBlock Text="Error loading buckets"
                                   Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    </StackPanel>
                    <TextBlock Text="{x:Bind ViewModel.Error, Mode=OneWay}"
                               TextWrapping="Wrap"
                               FontSize="12"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    <Button Content="Retry"
                            Command="{x:Bind ViewModel.RefreshCommand, Mode=OneWay}"
                            HorizontalAlignment="Left"
                            Margin="0,8,0,0"/>
                </StackPanel>
            </Border>

            <!-- Bucket List -->
            <ListView x:Name="BucketListView"
                      ItemsSource="{x:Bind ViewModel.Buckets, Mode=OneWay}"
                      SelectedItem="{x:Bind ViewModel.SelectedBucket, Mode=TwoWay}"
                      SelectionMode="Single"
                      IsItemClickEnabled="True"
                      AutomationProperties.Name="Bucket list"
                      Padding="8,8,8,16">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="Margin" Value="0,2"/>
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Bucket">
                        <Grid ColumnSpacing="12"
                              AutomationProperties.Name="{x:Bind Name}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Bucket Icon -->
                            <FontIcon Grid.Column="0"
                                      Glyph="&#xE838;"
                                      FontSize="20"
                                      VerticalAlignment="Center"
                                      Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"/>

                            <!-- Bucket Info -->
                            <StackPanel Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Spacing="2">
                                <TextBlock Text="{x:Bind Name}"
                                           FontFamily="Consolas"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock Text="{x:Bind CreationDate, Converter={StaticResource DateToRelativeConverter}}"
                                           FontSize="11"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           TextTrimming="CharacterEllipsis"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</UserControl>
