<?xml version="1.0" encoding="utf-8"?>
<ContentDialog
    x:Class="CloudflareR2Browser.Dialogs.PreviewDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="{x:Bind FileName, Mode=OneWay}"
    CloseButtonText="Close"
    DefaultButton="Close"
    MaxWidth="800"
    MaxHeight="600"
    Style="{StaticResource DefaultContentDialogStyle}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- File Info Header -->
        <Border
            Grid.Row="0"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            Padding="16,12"
            Margin="0,0,0,12"
            CornerRadius="8">
            <StackPanel Spacing="4">
                <TextBlock
                    Text="{x:Bind FileName, Mode=OneWay}"
                    FontWeight="SemiBold"
                    TextTrimming="CharacterEllipsis"
                    ToolTipService.ToolTip="{x:Bind FileName, Mode=OneWay}" />
                <TextBlock
                    Text="{x:Bind FileInfo, Mode=OneWay}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{StaticResource CaptionTextBlockStyle}" />
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="1">
            <!-- Loading State -->
            <StackPanel
                x:Name="LoadingPanel"
                Visibility="Collapsed"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="16">
                <ProgressRing
                    Width="48"
                    Height="48"
                    IsActive="True" />
                <TextBlock
                    Text="Loading preview..."
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
            </StackPanel>

            <!-- Image Preview -->
            <ScrollViewer
                x:Name="ImageScrollViewer"
                Visibility="Collapsed"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Auto"
                ZoomMode="Enabled"
                MinZoomFactor="0.1"
                MaxZoomFactor="10">
                <Image
                    x:Name="ImagePreview"
                    Stretch="Uniform"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
            </ScrollViewer>

            <!-- Text Preview -->
            <Border
                x:Name="TextPreviewBorder"
                Visibility="Collapsed"
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="16">
                <ScrollViewer
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto">
                    <TextBlock
                        x:Name="TextPreview"
                        FontFamily="Consolas"
                        FontSize="13"
                        IsTextSelectionEnabled="True"
                        TextWrapping="NoWrap" />
                </ScrollViewer>
            </Border>

            <!-- PDF/WebView2 Preview -->
            <Border
                x:Name="WebViewBorder"
                Visibility="Collapsed"
                Background="{ThemeResource LayerFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <Grid>
                    <!-- WebView2 will be added programmatically -->
                    <Border x:Name="WebViewContainer" />

                    <!-- Fallback message if WebView2 is not available -->
                    <StackPanel
                        x:Name="WebViewUnavailablePanel"
                        Visibility="Collapsed"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="12"
                        Padding="20">
                        <FontIcon
                            Glyph="&#xE7C3;"
                            FontSize="48"
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                        <TextBlock
                            Text="WebView2 is not available"
                            FontWeight="SemiBold"
                            TextAlignment="Center" />
                        <TextBlock
                            Text="Install Microsoft Edge WebView2 Runtime to preview PDFs and web content."
                            Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                            TextAlignment="Center"
                            TextWrapping="Wrap"
                            MaxWidth="300" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Unsupported File Type -->
            <StackPanel
                x:Name="UnsupportedPanel"
                Visibility="Collapsed"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="16"
                Padding="20">
                <FontIcon
                    Glyph="&#xE7BA;"
                    FontSize="64"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <TextBlock
                    Text="Preview Not Available"
                    FontWeight="SemiBold"
                    FontSize="18"
                    TextAlignment="Center" />
                <TextBlock
                    Text="{x:Bind UnsupportedMessage, Mode=OneWay}"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    TextAlignment="Center"
                    TextWrapping="Wrap"
                    MaxWidth="400" />
                <HyperlinkButton
                    x:Name="DownloadButton"
                    Content="Download File"
                    Click="DownloadButton_Click"
                    HorizontalAlignment="Center" />
            </StackPanel>

            <!-- Error State -->
            <StackPanel
                x:Name="ErrorPanel"
                Visibility="Collapsed"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Spacing="16"
                Padding="20">
                <FontIcon
                    Glyph="&#xE7BA;"
                    FontSize="64"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}" />
                <TextBlock
                    Text="Failed to Load Preview"
                    FontWeight="SemiBold"
                    FontSize="18"
                    TextAlignment="Center" />
                <TextBlock
                    x:Name="ErrorMessage"
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    TextAlignment="Center"
                    TextWrapping="Wrap"
                    MaxWidth="400" />
                <HyperlinkButton
                    Content="Try Again"
                    Click="RetryButton_Click"
                    HorizontalAlignment="Center" />
            </StackPanel>
        </Grid>
    </Grid>
</ContentDialog>
